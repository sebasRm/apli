    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaz.plato.AgregarPlatoFragment">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="1286dp"
        android:layout_height="800dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/fondodetalleplato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnAgregarMateriales"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:layout_marginStart="452dp"
        android:layout_marginTop="10dp"
        android:background="#4A4A4A"
        android:text="Agregar materiales"
        android:textColor="#FBFAFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />

    <androidx.cardview.widget.CardView
